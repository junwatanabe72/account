# LLM API設定
# OpenAI APIを使用する場合
VITE_LLM_PROVIDER=openai
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# Claude APIを使用する場合
# VITE_LLM_PROVIDER=anthropic
# VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
# VITE_ANTHROPIC_MODEL=claude-3-opus-20240229

# Azure OpenAI を使用する場合
# VITE_LLM_PROVIDER=azure
# VITE_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# VITE_AZURE_OPENAI_API_KEY=your_azure_api_key_here
# VITE_AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# API設定
VITE_LLM_MAX_TOKENS=4000
VITE_LLM_TEMPERATURE=0.3
VITE_LLM_TIMEOUT_MS=30000

# アプリケーション設定
VITE_APP_ENV=development
VITE_APP_DEBUG=true